<p id="notice"><%= notice %></p>
<h1>ユーザー検索</h1>

<%= render 'form', user: @user, method: :get, url: "/#{params[:id].to_i}" %>

<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>性別</th>
      <th>生年月日</th>
      <th>趣味</th>
      <th>職業</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.sex %></td>
        <td><%= user.birth %></td>
        <td><%= user.hobby %></td>
        <td><%= user.job %></td>
        <td><%= link_to '詳細', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
    <tr>
      <td align = "center" colspan="8"><%= "#{params[:id]}ページ" %>
    </tr>
  </tbody>
</table>
<tr>
  <% if params[:id].to_i >= 2 %>
    <td><%= link_to '前へ', "/#{params[:id].to_i - 1}"%>
  <% end %>
  <% if @users_num - (params[:id].to_i * 10) > 0 %>
    <td><%= link_to '次へ', "/#{params[:id].to_i + 1}"%>
  <% end %>
</tr>

<br>

<%= link_to 'ユーザー登録', new_user_path %>